<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F8F8F8"
                android:padding="20dp">
                <ImageButton
                    android:id="@+id/imbtn_back"
                    android:backgroundTint="#F8F8F8"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_tien_chi"
                    android:layout_width="106dp"
                    android:layout_height="25dp"
                    android:background="@color/pink"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toEndOf="@id/imbtn_back"
                    android:text="Tiền chi"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_tien_thu"
                    android:layout_width="106dp"
                    android:layout_centerVertical="true"
                    android:layout_height="25dp"
                    android:layout_marginLeft="16dp"
                    android:layout_toEndOf="@id/btn_tien_chi"
                    android:background="@drawable/border_btn_tienthu"
                    android:text="Tiền thu"
                    android:textColor="@color/pink" />

                <ImageView
                    android:id="@+id/imv_accept"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/pencil" />
            </RelativeLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="8dp"/>
            <LinearLayout
                android:paddingHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày" />

                <Space
                    android:layout_width="33dp"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:padding="10dp"
                        android:id="@+id/imv_back_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_coneback1" />
                    <Space
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>
                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:background="@color/pink"
                        android:gravity="center"
                        android:text="20/9/2023" />
                    <Space
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>

                    <ImageView
                        android:padding="10dp"
                        android:id="@+id/imv_increase_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_comeback1" />

                </LinearLayout>
            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="16dp"/>
            <LinearLayout
                android:paddingHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ghi chú" />

                <Space
                    android:layout_width="33dp"
                    android:layout_height="0dp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edt_note"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">

                    <com.example.qlct_n3.base.BaseTextInputEditText
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_btn_tienthu"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <TextView
                    android:id="@+id/tv_spending_money_or_revenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền chi" />

                <Space
                    android:layout_width="33dp"
                    android:layout_height="0dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edt_spending_money"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1">

                    <com.example.qlct_n3.base.BaseTextInputEditText
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_btn_tienthu"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="6dp"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ"
                    android:textSize="20sp" />

            </LinearLayout>
            <TextView
                android:paddingHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:text="Danh Mục"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:paddingHorizontal="20dp"
                android:id="@+id/recyclerview"

                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3"
                tools:itemCount="12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="8dp"/>
            <Button
                android:id="@+id/btn_accept"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="@color/pink"
                android:text="Cập Nhật"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
